
<div class="role">
  <div class="col-xs-2">
    <h2>{{inventory.name}}</h2>
    <div class="well">
      <img src="{{inventory.img}}" width="64px;" alt="" />
      <div class="row">
        <span class="label label-default">${{inventory.cost}}.00</span>

        <a {{action 'destroy' inventory}} href="#" class="btn btn-info btn-lg">
          <span class="glyphicon glyphicon-remove"></span> Remove
        </a>

      </div>
    </div>
  </div>
</div>
